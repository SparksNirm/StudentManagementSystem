<div class="row">
    <main class="col-md-12">
        <br>
        <h2>
            {{viewData.student.firstName}} {{viewData.student.lastName}} - Student: {{viewData.student.studentNum}}
        </h2>
        <hr/>
        <form method="post" action="/student/update">
        <input type="hidden" name="studentNum" value="{{viewData.student.studentNum}}"/>
        <fieldset>
            <legend>Personal Information</legend>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>First Name:</label>
                        <input class="form-control" name="firstName" type="text" value="{{viewData.student.firstName}}" />
                    </div>
                </div>
                 <div class="col-md-6">
                    <div class="form-group">
                        <label>Last Name:</label>
                        <input class="form-control" name="lastName" type="text" value="{{viewData.student.lastName}}" />
                    </div>
                </div> 
                <div class="col-md-12">
                        <div class="form-group">
                            <label>Email:</label>
                            <input class="form-control" name="email" value="{{viewData.student.email}}" type="email" />
                        </div>
                </div>
                <div class="col-md-4">
                        <div class="form-group">
                            <label>Address (Street):</label>
                            <input class="form-control" value="{{viewData.student.addressStreet}}" name="addressStreet" type="text" />
                        </div>
                </div>
                <div class="col-md-4">
                        <div class="form-group">
                            <label>Address (City):</label>
                            <input class="form-control" name="addressCity" value="{{viewData.student.addressCity}}"  type="text" />
                        </div>
                </div>
                <div class="col-md-4">
                        <div class="form-group">
                            <label>Address (Province):</label>
                            <input class="form-control" name="addressProvince" value="{{viewData.student.addressProvince}}" type="text" />
                        </div>
                </div>
            </div>
        </fieldset>
        <fieldset>
                <legend>Academic Information</legend>
                <div class="row">
                    <div class="col-md-4">
                        <label>College Employment:</label><br />
                        <div class="form-check">
                            {{#if viewData.student.TA}} 
                                <input class="form-check-input" name="TA" checked type="checkbox" id="TA">
                            {{else}}
                                <input class="form-check-input" name="TA" unchecked type="checkbox" id="TA">
                            {{/if}}
                            <label class="form-check-label" for="TA">
                                Teaching Assistant
                            </label>
                        </div>
                        <br />
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Enrollment Status:</label><br />
                            <label class="checkbox-inline"> 
                                    <input type="radio" name="status" value="Full Time" {{#equal viewData.student.status "Full Time"}}checked {{/equal}}/> Full Time
                                    <input type="radio" name="status" value="Part Time"  {{#equal viewData.student.status "Part Time"}}checked {{/equal}} /> Part Time
                            </label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="course">Enrolled in Course:</label>
                           {{#if viewData.courses}}
                                <select class="form-control"  name="course" id="course">
                                    <option value="">Select Course</option>
                                    {{#each viewData.courses}}
                                        <option value="{{this.courseId}}" {{#if this.selected}} selected  {{/if}}>{{this.courseCode}}</option>
                                    {{/each}}
                            </select>
                            {{else}}
                            <div>No Courses</div>
                           {{/if}}
                            
                        </div>
                    </div>
                </div>
            </fieldset>
         <hr/>
                <input type="submit" class="btn btn-primary float-right" value="Update Student" /> <br/> <br/> <br/>
        </form>
    </main>

</div>